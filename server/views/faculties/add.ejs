<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Content  for the add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%=title %></h1>

      <form class="form" method="post">
        <div class="from-group">
          <label for="IdTextField">Faculty ID</label>
          <input
            type="text"
            class="form-control"
            id="IdTextField"
            placeholder="Enter the Facult ID:"
            name="Facultyid"
            required
          />
        </div>

        <div class="from-group">
          <label for="NameTextField">Faculty Name</label>
          <input
            type="text"
            class="form-control"
            id="NameTextField"
            placeholder="Enter the Faculty Name :"
            name="Facultyname"
            required
          />
        </div>

        <div class="from-group">
          <label for="DeptTextField">Department</label>
          <input
            type="text"
            class="form-control"
            id="AuthorDeptTextField"
            placeholder="Department"
            name="Department"
            required
          />
        </div>

        <div class="from-group">
            <label for="SubtTextField">Subject</label>
            <input
              type="text"
              class="form-control"
              id="SubtTextField"
              placeholder="Subject"
              name="Subject"
              required
            />
          </div>

       
      

        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i>Submit
        </button>

        <a href="/faculties" class="btn btn-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>
      </form>
    </div>
  </div>
</div>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
